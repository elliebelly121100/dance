<h1>Reviews</h1>

<p><a href="/new_review">Add a New Review</a></p>
<div>
<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>

  </thead>

  <tbody>
  <% @reviews.each do |review| %>
    <tr>
      <th>User</th>
      <td><%= review.user.name %></td>
    </tr>
    <tr>
    <th>Rating</th>
     <td><%= review.rating %>/10</td>
    </tr>
    <tr>
      <th>Studio</th>
      <td><%= review.studio.name %></td>
    </tr>
    <tr>
     <th>Review</th>
     <td><%= review.text %></td>
    </tr>
    <tr>
     <td><a href="/reviews/<%= review.id %>">Show</a> |
     <a href="/reviews/<%= review.id %>/edit">Edit</a> |
     <a href="/reviews/<%= review.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
